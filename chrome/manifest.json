{
    "name": "SPE3D",
    "version": "0.1",
    "description": "Captchar solver and status view for SPE3D Download Manager",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "notifications",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Click to define SPE3D settings"
    }
}