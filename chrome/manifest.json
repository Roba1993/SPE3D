{
    "name": "SPE3D",
    "version": "0.1",
    "description": "Captchar solver and status view for SPE3D Download Manager",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "notifications",
        "storage",
        "http://*/",
        "https://*/",
        "www/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "www/index.html",
        "default_title": "Click to define SPE3D settings"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}